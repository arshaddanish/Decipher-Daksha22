<script>
	function GetResult(id,oid,a){
		var ip = document.getElementById(id).value;
		var data = JSON.stringify({
                  "input": ip,
		  "identifier": a,
                });
                
                var xhr = new XMLHttpRequest();
                xhr.withCredentials = true;
                
                xhr.addEventListener("readystatechange", function () {
                  if (this.readyState === 4) {
		    document.getElementById(oid).value = JSON.parse(this.responseText)["output"];
                  }
                });
                
                xhr.open("POST", "/output");
                xhr.setRequestHeader("content-type", "application/json");
                xhr.setRequestHeader("cache-control", "no-cache");
                
                xhr.send(data);     
	}
	function Clear(a){
		var textField = "Text"+a;
		var resultField = "Result"+a;

		
		document.getElementById(textField).value = document.getElementById(resultField).value = '';
	}
</script>

